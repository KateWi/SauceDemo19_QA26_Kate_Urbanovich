<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE suite SYSTEM "http://testng.org/testng-1.0.dtd">
<suite name="Smoke Tests" parallel="tests" thread-count="2">
    <test name="Smoke test groups">
        <groups>
            <run>
                <include name="Smoke" />
            </run>
        </groups>
        <packages>
            <package name="tests"/>
        </packages>
    </test>
    <test name="Smoke test classes">
        <classes>
            <class name="tests.ShoppingCartTests" />
        </classes>
    </test>
</suite>